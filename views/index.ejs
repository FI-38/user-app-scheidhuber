<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1><%= message %></h1>

  <% if (user) { %>
    <p>Hallo <%= user.name %></p>
  <% } else { %>
    <p>Bitte einloggen</p>
  <% } %>

  <ul>
    <% const items = ['Punkt 1', 'Punkt 2', 'Punkt 3']; %>
    <% items.forEach(item => { %>
      <li><%= item %></li>
    <% }); %>
  </ul>
</body>
</html>