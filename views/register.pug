extends layouts/main

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-6
        .card
          .card-header
            h3 Registrierung
          .card-body

            form(action="/register" method="POST")
              .mb-3
                label.form-label(for="username") Benutzername
                input.form-control(type="text" id="username"
                                   name="username" required)
              .mb-3
                label.form-label(for="name") Name
                input.form-control(type="text" id="name"
                                   name="name" required)
              .mb-3
                label.form-label(for="email") E-Mail
                input.form-control(type="email" id="email"
                                   name="email" required)
              .mb-3
                label.form-label(for="password") Passwort
                input.form-control(type="password" id="password"
                                   name="password" required minlength="8")
                .form-text Mindestens 8 Zeichen

              button.btn.btn-primary.w-100(type="submit") Registrieren

            .mt-3.text-center
              p Schon registriert?
                a(href="/login") Zum Login